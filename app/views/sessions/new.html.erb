<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label_tag :email %>
        <%= text_field_tag :email,nil, required: true, autofocus: true, size: 40, placeholder: "Email or Username" %>
      </li>
      <li class="required">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true, size: 40 %>
      </li>
    </ol>
    <p>
      <%= submit_tag 'Sign In' %>
    </p>
  </fieldset>
<% end %>