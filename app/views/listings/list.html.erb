<section>
<div class="row list_search">
    <div class="large-10 large-centered columns form_search">
     <%= form_tag listings_path, method: :get do %>
      <div class="row collapse">
        <div class="small-10 columns">
        <%= text_field_tag :query, params[:query], placeholder: "Find a place to stay." %>
          
        </div>
        <div class="small-2 columns">
        <%= submit_tag "Search for Home", name: nil, class: "button postfix" %>
        </div>
    
      </div><% end %>
    </div></div></section>
    
<div class="list_all">
  <div class='medium-6 columns small-12 columns' style="margin:0;padding:0;">
      <p id="directions" style='width: 100%; height:550px;'></p>
  </div>

  <div class='medium-6 columns small-12 columns' style="height:550px;overflow:auto;margin:0;padding:0;">
    <% if @listings.any? %>
      <% @listings.each_slice(2) do |group| %>
        <% group.each do |listing| %>
          <% if listing %>
            <div class="medium-6 columns small-12 columns" >
                 <%= image_tag listing.upload.url(:medium), style: 'width:100%;height:150px;' %>
                 <h4><%= link_to(listing.title, listing) %></h4>
                 <!-- <strong>Location</strong>
                 <%= listing.address %>
                 <strong>Price</strong>
                 <%= format_price(listing) %> -->
                <table>
                  <tr style= 'height:80px;'>
                    <th>Location</th>
                    <td><%= listing.address %></td>
                  </tr>
                  <tr>
                    <th>Price</th>
                    <td><%= format_price(listing) %></td>
                  </tr>
                </table>
                </div>
            <% end %>
          <% end %>
          <!-- </div> -->
        <% end %>
         <% end %>
      </div>
      </div>
   </div>
    </div>
