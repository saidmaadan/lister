<%= form_for @listing, :html => {:multipart => true} do |f| %>
  <%= render "shared/errors", object: @listing %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :summary %>
        <%= f.text_area :summary, cols: 40, rows: 7 %>
      </li>
      <li class="required">
        <%= f.label :latitude %>
        <%= f.text_field :latitude, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :longitude %>
        <%= f.text_field :longitude, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :address %>
        <%= f.text_field :address, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :pricing %>
        <%= f.number_field :pricing, size: 12 %>
      </li>
      <li class="required">
        <%= f.label :accomodate %>
        <%= f.text_field :accomodate, size: 30 %>
      </li>
     <li>
        <%= f.label :apartment_type %>
        <%= f.text_field :apartment_type  %>
      </li>
      <li class="required">
        <%= f.label :bedroom %>
        <%= f.number_field :bedroom, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :bathroom %>
        <%= f.number_field :bathroom, size: 30 %>
      </li>
      <li>
        <%= f.label :contact_name %>
        <%= f.text_field :contact_name, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :company_name %>
        <%= f.text_field :company_name, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :phone %>
        <%= f.text_field :phone, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :website_url %>
        <%= f.text_field :website_url, size: 30 %>
      </li>
      <li>
        <%= f.label :user_type %>
         <%= f.text_field :user_type %>
      </li>
      <li class="required">
        <%= f.label :info, 'More Info' %>
        <%= f.text_field :info, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :upload %>
        <%= f.file_field :upload, size: 30 %>
      </li>
      <li class="required">
        <%= f.collection_check_boxes(:amenity_ids, Amenity.all, :id, :name) %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", listings_list_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>