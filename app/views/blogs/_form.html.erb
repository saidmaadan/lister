<%= form_for(@blog) do |f| %>
  <%= render "shared/errors", object: @blog %>
  <div class="field">
  <%= f.text_field :title, placeholder: "Your blog title..." %>
    <%= f.text_area :content, placeholder: "Blog content minimum of 20 characters..." %>
  </div>
  <%= f.submit "Blog", class: "button" %>
<% end %>