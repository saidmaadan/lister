<h1>Make Enquiry about <%= link_to @listing.title, @listing %></h1>
</header>

<%= form_for([@listing, @enquiry]) do |f| %>
  <%= render "shared/errors", object: @enquiry %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>
        <%= f.text_field :email, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment%>
      </li>
    </ol>
    <p>
      <%= f.submit %> 
      <%= link_to "Cancel", @listing, class: 'button' %>
    </p
  </fieldset>
<% end %>